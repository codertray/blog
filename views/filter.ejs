<% var currentPage = topic %>
<%- include("partials/frontend/header", {currentPage: currentPage, minimal: false}); %>
<h2><%= topic %></h2>
<div class="container">
    <% data.forEach(item => { %>
        <div class="promo">
            <div class="title">
                <a href="/blog/<%= item.route %>"><h3><%= item.title %></h3></a>
                <p><%= item.date %></p>    
            </div>
            <dov class="content">
                <% if (item.image !== null) { %>
                    <img src="<%= item.image %>" />
                <% }; %>
                <p><%= item.blerb %></p>        
            </dov>
        </div>
    <% }); %>
</div>
<%- include("partials/frontend/footer") %>