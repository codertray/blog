<% var currentPage = data.title %>
<%- include("partials/header", {currentPage: currentPage}); %>
<%- include("partials/navbar"); %>

<div>
    <h2><%= data.title %></h2>
    <p><%= data.date %></p>
</div>
<% if (data.image !==null) { %>
    <img src="<%= data.image %>" />
<% } else { %>
    <hr />
<% } %>
<div>
    <%- data.content %>
</div>
<%- include("partials/footer"); %>